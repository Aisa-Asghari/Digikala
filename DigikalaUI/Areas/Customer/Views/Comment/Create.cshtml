@model DigikalaDataAccess.Entity.Comment

@{
    ViewData["Title"] = "Create";
}

@section Style{
    .button1 {
    font-size: 1rem;
    line-height: 25px;
    font-weight: 700;
    padding: 12.5px;
    border-radius: 7.5px;
    }

    .input1 {
    padding: 10px;
    border-radius: 7.5px;
    }

    .shadow {
    box-shadow: 0 5px 5px 0 #ededed, 0 5px 5px 0 #ededed;
    border-radius: 15px;
    }

    .txt {
    font-size: 14px;
    }
}

@Html.Partial("_PartialTop")


@Html.Partial("_PartialNav")

<form asp-action="Create" asp-controller="Comment" method="post" class="m-lg-5">
    <div class="form-group">
        <input asp-for="CommentHead" class="form-control input1 text-right" placeholder="موضوع" />

    </div>
    <span asp-validation-for="CommentHead" class="text-danger mt-1 mb-1"></span>
    <div class="form-group d-flex justify-content-center mt-2">
        <input asp-for="CommentBody" class="form-control input1 text-right" placeholder="متن" />

    </div>
    <span asp-validation-for="CommentBody" class="text-danger mt-1 mb-1"></span>

    <input type="submit" class="btn btn-danger btn-block button1 mt-2" value="ارسال پیام" />
</form>

@Html.Partial("_PartialFooter")